<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear"
            android:textSize="@dimen/default_text_size">

        </Button>

        <com.rdi.fingerdrowact.DrawBoxLinePathView
            android:id="@+id/draw_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_draw_rect"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/ic_crop_square_black_24dp"

                ></ImageButton>

            <ImageButton
                android:id="@+id/btn_draw_line"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/ic_linear_scale_black_24dp"></ImageButton>

            <ImageButton
                android:id="@+id/btn_draw_path"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:background="@drawable/ic_timeline_black_24dp"></ImageButton>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/color_one"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/color_two"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/color_three"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/color_four"
            android:layout_width="48dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1" />


    </LinearLayout>


</LinearLayout>